<div class="row">
  <div class="col-12">
    <p id="alert"><%= alert %></p>
    <h1>Login</h1>
    <%= form_tag sessions_path do |form| %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <div class="actions">
        <%= submit_tag "Login" %>
      </div>
    <% end %>
  </div>
</div>
