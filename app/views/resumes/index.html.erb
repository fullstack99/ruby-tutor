<div class="row">
    <div class="col-12">
        <% if !flash[:notice].blank? %>   
        <div>   
            <%= flash[:notice] %>   
        </div>   
        <% end %>   
        
        <br>   
        
        <%= link_to "New Resume", new_resume_path %>   
        <br>   
        <br>   
        <div class="table-responsive">
            <table class="table table-hover table-striped">   
                <thead>   
                    <tr>   
                        <th>Candidate Name</th>   
                        <th>Download Link</th>   
                        <th>Action</th>   
                    </tr>   
                </thead>   
                    
                <tbody>   
                    <% @resumes.each do |resume| %>   
                            
                        <tr>   
                            <td><%= resume.name %></td>   
                            <td><%= link_to  image_tag(resume.attachment_url, class: 'img-thumbnail'), resume.attachment_url %></td>   
                            <td><%= link_to "Delete",  resume,
                                    method: :delete,
                                    data: {confirm: "Are you sure you want to delete #{resume.name}?"} %></td>   
                        </tr>   
                            
                    <% end %>   
                </tbody>   
                
            </table>
        </div>
    </div>
</div>
